<%= render "shared/notice_banner" %>

<!-- Hero Section -->
<div class="bg-white py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to blogs_path, class: "text-pink-600 hover:text-pink-700 font-medium text-sm" do %>
        ‚Üê Back to Blog
      <% end %>
    </div>

    <!-- Category & Date -->
    <div class="flex items-center gap-3 mb-4">
      <% if @blog.category.present? %>
        <span class="px-3 py-1 bg-pink-100 text-pink-700 text-xs font-semibold rounded-full uppercase tracking-wide">
          <%= @blog.category %>
        </span>
      <% end %>
      <span class="text-sm text-gray-500">
        <%= @blog.published_at.strftime("%B %d, %Y") %>
      </span>
      <% if @blog.author.present? %>
        <span class="text-sm text-gray-500">
          by <%= @blog.author %>
        </span>
      <% end %>
    </div>

    <!-- Title -->
    <h1 class="text-5xl font-bold text-gray-900 mb-8"><%= @blog.title %></h1>

    <!-- Featured Image -->
    <% if @blog.image.attached? %>
      <div class="aspect-[16/9] bg-gray-100 rounded-xl overflow-hidden mb-12">
        <%= image_tag @blog.image,
            alt: @blog.title,
            class: "w-full h-full object-cover"
        %>
      </div>
    <% end %>

    <!-- Excerpt -->
    <% if @blog.excerpt.present? %>
      <div class="text-xl text-gray-600 leading-relaxed mb-12 pb-8 border-b border-gray-200">
        <%= @blog.excerpt %>
      </div>
    <% end %>

    <!-- Content -->
    <div class="prose prose-lg max-w-none mb-16">
      <%= simple_format(@blog.content) %>
    </div>

    <!-- Share Section -->
    <div class="border-t border-b border-gray-200 py-8 mb-16">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
      <div class="flex gap-4">
        <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=<%= @blog.title %>" target="_blank" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition">
          Twitter
        </a>
        <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= request.original_url %>" target="_blank" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition">
          LinkedIn
        </a>
        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition">
          Facebook
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Related Articles -->
<% if @related_blogs.any? %>
<div class="bg-gray-50 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Related Articles</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% @related_blogs.each do |related_blog| %>
        <%= link_to blog_path(related_blog.slug), class: "block bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition group" do %>
          <div class="aspect-[16/10] bg-gray-100 overflow-hidden">
            <% if related_blog.image.attached? %>
              <%= image_tag related_blog.image,
                  alt: related_blog.title,
                  class: "w-full h-full object-cover group-hover:scale-105 transition duration-300"
              %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-pink-100 to-purple-100">
                <span class="text-gray-400">No image</span>
              </div>
            <% end %>
          </div>
          <div class="p-6">
            <div class="flex items-center gap-3 mb-3">
              <% if related_blog.category.present? %>
                <span class="text-xs font-semibold text-pink-600 uppercase tracking-wide">
                  <%= related_blog.category %>
                </span>
              <% end %>
              <span class="text-xs text-gray-500">
                <%= related_blog.published_at.strftime("%b %d, %Y") %>
              </span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-pink-600 transition">
              <%= related_blog.title %>
            </h3>
            <div class="flex items-center text-pink-600 font-medium text-sm">
              Read more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<!-- CTA Section -->
<div class="bg-gradient-to-br from-pink-600 to-purple-700 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-white mb-4">Ready to Boost Your Revenue?</h2>
    <p class="text-xl text-white mb-8">
      Join 66,000+ brands already using Revnous to drive sustainable growth
    </p>
    <div class="flex justify-center gap-4">
      <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-8 py-4 bg-black text-white rounded-md hover:bg-gray-900 transition font-medium text-lg">
        Start Free Trial
      </a>
      <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="px-8 py-4 bg-white text-gray-900 rounded-md hover:bg-gray-100 transition font-medium text-lg">
        Book a Demo
      </a>
    </div>
  </div>
</div>
