<%= render "shared/notice_banner" %>

<!-- Hero Section -->
<div class="bg-gradient-to-br from-gray-900 via-purple-900 to-pink-900 text-white py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <p class="text-sm font-semibold text-pink-300 uppercase tracking-wide mb-4">BLOG</p>
      <h1 class="text-5xl lg:text-6xl font-bold mb-6">
        Insights & Strategies for eCommerce Growth
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Expert tips, industry trends, and proven tactics to increase your revenue
      </p>
    </div>
  </div>
</div>

<!-- Featured Blog (if exists) -->
<% if @featured_blog %>
<div class="bg-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-6">FEATURED POST</p>
    <%= link_to blog_path(@featured_blog.slug), class: "block" do %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 bg-gray-50 rounded-2xl overflow-hidden hover:shadow-xl transition group">
        <div class="aspect-[16/10] lg:aspect-auto bg-gray-200 overflow-hidden">
          <% if @featured_blog.image.attached? %>
            <%= image_tag @featured_blog.image,
                alt: @featured_blog.title,
                class: "w-full h-full object-cover group-hover:scale-105 transition duration-500"
            %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-pink-100 to-purple-100">
              <span class="text-gray-400">No image</span>
            </div>
          <% end %>
        </div>
        <div class="p-8 lg:p-12 flex flex-col justify-center">
          <div class="flex items-center gap-3 mb-4">
            <span class="px-3 py-1 bg-pink-100 text-pink-700 text-xs font-semibold rounded-full uppercase tracking-wide">
              <%= @featured_blog.category %>
            </span>
            <span class="text-sm text-gray-500">
              <%= @featured_blog.published_at.strftime("%B %d, %Y") %>
            </span>
          </div>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 group-hover:text-pink-600 transition">
            <%= @featured_blog.title %>
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            <%= @featured_blog.excerpt %>
          </p>
          <div class="flex items-center text-pink-600 font-medium">
            Read article
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<!-- All Blog Posts -->
<div class="bg-gray-50 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Latest Articles</h2>

      <% if @categories.any? %>
        <div class="flex gap-2">
          <%= link_to "All", blogs_path, class: "px-4 py-2 rounded-md #{params[:category].blank? ? 'bg-pink-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'} transition" %>
          <% @categories.first(4).each do |category| %>
            <%= link_to category, blogs_path(category: category), class: "px-4 py-2 rounded-md #{params[:category] == category ? 'bg-pink-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'} transition" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <% @blogs.each do |blog| %>
        <%= link_to blog_path(blog.slug), class: "block bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition group" do %>
          <div class="aspect-[16/10] bg-gray-100 overflow-hidden">
            <% if blog.image.attached? %>
              <%= image_tag blog.image,
                  alt: blog.title,
                  class: "w-full h-full object-cover group-hover:scale-105 transition duration-300"
              %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-pink-100 to-purple-100">
                <span class="text-gray-400">No image</span>
              </div>
            <% end %>
          </div>
          <div class="p-6">
            <div class="flex items-center gap-3 mb-3">
              <% if blog.category.present? %>
                <span class="text-xs font-semibold text-pink-600 uppercase tracking-wide">
                  <%= blog.category %>
                </span>
              <% end %>
              <span class="text-xs text-gray-500">
                <%= blog.published_at.strftime("%b %d, %Y") %>
              </span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-pink-600 transition">
              <%= blog.title %>
            </h3>
            <p class="text-gray-600 text-sm mb-4">
              <%= blog.excerpt&.truncate(120) %>
            </p>
            <div class="flex items-center text-pink-600 font-medium text-sm">
              Read more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center items-center gap-2">
      <%= paginate @blogs %>
    </div>
  </div>
</div>

<!-- CTA Section -->
<div class="bg-gradient-to-br from-pink-600 to-purple-700 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-white mb-4">Ready to Boost Your Revenue?</h2>
    <p class="text-xl text-white mb-8">
      Join 66,000+ brands already using Revnous to drive sustainable growth
    </p>
    <div class="flex justify-center gap-4">
      <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-8 py-4 bg-black text-white rounded-md hover:bg-gray-900 transition font-medium text-lg">
        Start Free Trial
      </a>
      <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="px-8 py-4 bg-white text-gray-900 rounded-md hover:bg-gray-100 transition font-medium text-lg">
        Book a Demo
      </a>
    </div>
  </div>
</div>
