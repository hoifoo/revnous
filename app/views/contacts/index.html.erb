<%= render "shared/notice_banner" %>

<!-- Hero Section -->
<div class="bg-gradient-to-br from-gray-900 via-purple-900 to-pink-900 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-5xl lg:text-6xl font-bold mb-6">Get in Touch</h1>
    <p class="text-xl text-gray-300 max-w-2xl mx-auto">
      Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
    </p>
  </div>
</div>

<!-- Contact Section -->
<div class="bg-white py-20">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Contact Info -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      <div class="text-center p-6 bg-gray-50 rounded-lg">
        <div class="w-16 h-16 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
        <a href="mailto:contact@revnous.com" class="text-pink-600 hover:text-pink-700 transition">
          contact@revnous.com
        </a>
      </div>

      <div class="text-center p-6 bg-gray-50 rounded-lg">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Schedule a Demo</h3>
        <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="text-purple-600 hover:text-purple-700 transition">
          Book a meeting
        </a>
      </div>

      <div class="text-center p-6 bg-gray-50 rounded-lg">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Quick Start</h3>
        <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="text-blue-600 hover:text-blue-700 transition">
          Start free trial
        </a>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="bg-gray-50 rounded-2xl p-8 md:p-12 shadow-lg">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Send us a Message</h2>

      <%= form_with url: contact_path, method: :post, scope: :contact, class: "space-y-6", id: "contact-form" do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent text-lg", placeholder: "John Doe" %>
          </div>

          <div>
            <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent text-lg", placeholder: "john@example.com" %>
          </div>
        </div>

        <div>
          <%= form.label :company, "Company Name (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :company, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent text-lg", placeholder: "Your Company" %>
        </div>

        <div>
          <%= form.label :subject, "Subject", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :subject, required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent text-lg", placeholder: "How can we help?" %>
        </div>

        <div>
          <%= form.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :message, required: true, rows: 6, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent text-lg", placeholder: "Tell us more about your needs..." %>
        </div>

        <!-- ALTCHA CAPTCHA Widget -->
        <div class="flex justify-center">
          <altcha-widget
            challengeurl="<%= altcha_challenge_path %>"
            hidelogo="false"
            name="altcha"
          ></altcha-widget>
        </div>

        <div class="text-center">
          <%= form.submit "Send Message", class: "px-12 py-4 bg-pink-600 text-white text-lg font-semibold rounded-lg hover:bg-pink-700 transition cursor-pointer shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-pink-600", id: "submit-btn", disabled: true %>
        </div>
      <% end %>
    </div>

    <!-- ALTCHA Widget Script -->
    <script type="module" src="https://cdn.jsdelivr.net/npm/altcha/dist/altcha.min.js"></script>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const submitBtn = document.getElementById('submit-btn');
        const altchaWidget = document.querySelector('altcha-widget');

        // Listen for ALTCHA verification events
        if (altchaWidget) {
          altchaWidget.addEventListener('statechange', (event) => {
            // Enable button when ALTCHA is verified
            if (event.detail.state === 'verified') {
              submitBtn.disabled = false;
            } else {
              submitBtn.disabled = true;
            }
          });
        }
      });
    </script>
  </div>
</div>

<!-- FAQ Section -->
<div class="bg-gray-50 py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Frequently Asked Questions</h2>

    <div class="space-y-6">
      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">How quickly will I get a response?</h3>
        <p class="text-gray-600">We typically respond to all inquiries within 24 hours during business days. For urgent matters, please mention it in your subject line.</p>
      </div>

      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Do you offer custom enterprise solutions?</h3>
        <p class="text-gray-600">Yes! We offer customized solutions for enterprise clients. Please mention your requirements in the message, and our enterprise team will reach out to you.</p>
      </div>

      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Can I schedule a demo?</h3>
        <p class="text-gray-600">Absolutely! You can book a demo directly using our <%= link_to "calendar link", "https://calendar.app.google/ExeXXoFRYB52hu5S8", target: "_blank", class: "text-pink-600 hover:text-pink-700 underline" %>, or mention your preferred time in the contact form.</p>
      </div>

      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">What information should I include in my message?</h3>
        <p class="text-gray-600">Please include details about your business, your current challenges, and what you're hoping to achieve with Revnous. The more information you provide, the better we can assist you.</p>
      </div>
    </div>
  </div>
</div>

<!-- CTA Section -->
<div class="bg-gradient-to-br from-pink-600 to-purple-700 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-white mb-4">Ready to Get Started?</h2>
    <p class="text-xl text-white mb-8">
      Join 66,000+ brands already using Revnous to drive sustainable growth
    </p>
    <div class="flex justify-center gap-4">
      <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-8 py-4 bg-black text-white rounded-md hover:bg-gray-900 transition font-medium text-lg">
        Start Free Trial
      </a>
      <%= link_to "View Products", products_path, class: "px-8 py-4 bg-white text-gray-900 rounded-md hover:bg-gray-100 transition font-medium text-lg" %>
    </div>
  </div>
</div>
