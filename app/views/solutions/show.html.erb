<!-- Hero Section -->
<div class="bg-gradient-to-br from-gray-900 via-purple-900 to-pink-900 text-white py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Logo -->
      <div class="mb-8 flex justify-center">
        <% if @data[:logo_image].present? %>
          <%= image_tag @data[:logo_image], alt: @data[:headline], class: "h-20 w-auto", loading: :lazy %>
        <% else %>
          <%= image_tag "logo.png", alt: "Revnous", class: "h-16 w-auto brightness-0 invert", loading: :lazy %>
        <% end %>
      </div>
      
      <h1 class="text-5xl lg:text-7xl font-bold mb-6">
        <%= @data[:headline] %>
      </h1>
      <p class="text-2xl lg:text-3xl text-gray-300 mb-4">
        <%= @data[:subheadline] %>
      </p>
      <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
        <%= @data[:pain_description] %>
      </p>
      
      <div class="flex flex-wrap justify-center gap-4">
        <a href="https://apps.shopify.com/pricing-schedule" 
           target="_blank" 
           class="px-8 py-4 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium text-lg"
           onclick="gtag('event', 'start_trial_click', { 'button_location': 'solution_hero', 'solution_slug': '<%= @slug %>' });">
          <%= @data[:cta_primary] %> →
        </a>
        <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" 
           target="_blank" 
           class="px-8 py-4 bg-transparent border-2 border-white text-white rounded-md hover:bg-white hover:text-gray-900 transition font-medium text-lg"
           onclick="gtag('event', 'book_demo_click', { 'button_location': 'solution_hero', 'solution_slug': '<%= @slug %>' });">
          <%= @data[:cta_secondary] %>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Social Proof -->
<div class="bg-white py-8 border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-center text-gray-600 font-medium">
      <%= @data[:social_proof] %>
    </p>
  </div>
</div>

<!-- How It Works (The Demo) -->
<div class="bg-gray-50 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">How It Works</h2>
      <p class="text-xl text-gray-600">Simple, fast, and foolproof</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Demo Visual -->
      <div class="order-2 lg:order-1">
        <% if @data[:demo_video_url].present? %>
          <% video_id = @data[:demo_video_url].match(/(?:youtu\.be\/|youtube\.com\/(?:embed\/|v\/|watch\?v=))([^&?\/]+)/)[1] rescue nil %>
          <% if video_id %>
            <div class="rounded-lg shadow-2xl overflow-hidden bg-black">
              <div class="relative" style="padding-bottom: 56.25%;">
                <iframe 
                  class="absolute top-0 left-0 w-full h-full"
                  src="https://www.youtube.com/embed/<%= video_id %>?rel=0&modestbranding=1"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen>
                </iframe>
              </div>
            </div>
          <% end %>
        <% elsif @data[:demo_image].present? %>
          <div class="rounded-lg shadow-2xl overflow-hidden bg-white p-4">
            <%= image_tag @data[:demo_image], 
                alt: "#{@data[:headline]} Demo", 
                loading: :lazy,
                class: "w-full h-auto rounded-lg" %>
          </div>
        <% else %>
          <!-- Placeholder when no demo -->
          <div class="w-full h-96 bg-gradient-to-br from-pink-100 to-purple-100 rounded-lg flex items-center justify-center shadow-2xl">
            <div class="text-center p-8">
              <svg class="w-24 h-24 mx-auto text-pink-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              <p class="text-gray-700 font-semibold text-lg">Demo Video Coming Soon</p>
              <p class="text-gray-500 text-sm mt-2">Book a demo to see it in action</p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Steps -->
      <div class="order-1 lg:order-2">
        <div class="space-y-6">
          <% @data[:how_it_works].each_with_index do |step, index| %>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-pink-600 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl">
                <%= index + 1 %>
              </div>
              <div class="pt-2">
                <p class="text-lg text-gray-900"><%= step %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Value Propositions -->
<div class="bg-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Merchants Love This</h2>
      <p class="text-xl text-gray-600">Built for speed, reliability, and peace of mind</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% @data[:value_props].each do |prop| %>
        <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-600 to-purple-600 rounded-lg flex items-center justify-center text-white mb-6">
            <% case prop[:icon] %>
            <% when "clock" %>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            <% when "refresh" %>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
            <% when "calendar" %>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            <% when "filter" %>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
              </svg>
            <% when "calculator" %>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            <% when "eye" %>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            <% end %>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3"><%= prop[:title] %></h3>
          <p class="text-gray-600"><%= prop[:description] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

