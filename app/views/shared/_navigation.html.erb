              <p class="text-sm text-gray-600">Comprehensive insights and performance tracking</p>
            </div>
          </div>
        </a>

        <!-- Ongoing Support -->
        <a href="<%= services_path %>#support" class="group p-6 rounded-lg hover:bg-gradient-to-br hover:from-pink-50 hover:to-purple-50 transition">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-pink-600 to-purple-600 rounded-lg flex items-center justify-center text-white">
