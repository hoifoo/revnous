<%= render "shared/notice_banner" %>

<!-- Hero Section -->
<div class="bg-black text-white py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <p class="text-sm font-semibold text-gray-400 uppercase tracking-wide mb-6">SIMPLE, PREDICTABLE PRICING</p>
    <h1 class="text-5xl lg:text-6xl font-bold mb-8">Our plans scale for any business<br>â€”from startup to enterprise.</h1>
    <div class="flex justify-center gap-4">
      <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="px-6 py-3 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium">
        Book a demo
      </a>
      <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-6 py-3 bg-transparent border-2 border-white text-white rounded-md hover:bg-white hover:text-black transition font-medium">
        Start Free Trial
      </a>
    </div>
  </div>
</div>

<!-- Pricing Calculator Section -->
<div class="bg-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-8">SIMPLE, PREDICTABLE PRICING</p>
    <h2 class="text-2xl font-bold text-gray-900 mb-8">Enter your estimated number of total store orders per month</h2>

    <div class="bg-white border-2 border-gray-200 rounded-lg p-8 mb-12">
      <div class="mb-6">
        <label class="text-lg font-medium text-gray-900 mb-4 block">
          I have around <span id="orderCount" class="text-pink-600 font-bold">200</span> total store orders per month
        </label>
        <input
          type="range"
          min="0"
          max="30000"
          value="200"
          step="100"
          id="orderSlider"
          class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-pink-600"
        />
        <div class="flex justify-between text-sm text-gray-500 mt-2">
          <span>0</span>
          <span>10,000</span>
          <span>20,000</span>
          <span>30,000</span>
        </div>
      </div>
    </div>

    <!-- Product-Based Pricing -->
    <% @products.each do |product| %>
      <% if product.pricing_plans.any? %>
        <div class="mb-16">
          <div class="flex items-center gap-4 mb-8">
            <% if product.logo.attached? %>
              <%= image_tag product.logo, class: "h-12 w-auto" %>
            <% end %>
            <div>
              <h2 class="text-3xl font-bold text-gray-900"><%= product.name %></h2>
              <% if product.short_description.present? %>
                <p class="text-gray-600 mt-1"><%= product.short_description %></p>
              <% end %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-<%= [product.pricing_plans.count, 4].min %> gap-6">
            <% product.pricing_plans.ordered.each do |plan| %>
              <div class="bg-white border-2 <%= plan.is_popular ? 'border-pink-600' : 'border-gray-200' %> rounded-lg p-6 <%= plan.is_popular ? '' : 'hover:border-pink-600' %> transition relative">
                <% if plan.is_popular %>
                  <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 px-3 py-1 bg-pink-600 text-white text-xs font-semibold rounded-full">
                    MOST POPULAR
                  </div>
                <% end %>

                <div class="mb-4">
                  <span class="text-xs font-semibold text-pink-600 uppercase tracking-wide"><%= plan.name %></span>
                  <div class="mt-2">
                    <% if plan.free_plan? %>
                      <span class="text-4xl font-bold text-gray-900">Free</span>
                    <% else %>
                      <span class="text-4xl font-bold text-gray-900">$<%= plan.price %></span>
                      <span class="text-gray-600">/<%= plan.billing_period %></span>
                    <% end %>
                  </div>
                  <% if plan.order_limit.present? %>
                    <p class="text-sm text-gray-600 mt-2">for <%= plan.order_limit %></p>
                  <% else %>
                    <p class="text-sm text-gray-600 mt-2">unlimited total store orders per month</p>
                  <% end %>
                </div>

                <% if plan.cta_url.present? %>
                  <a href="<%= plan.cta_url %>" target="_blank" class="block w-full px-4 py-2 <%= plan.is_popular ? 'bg-pink-600 hover:bg-pink-700' : 'bg-black hover:bg-gray-800' %> text-white rounded-md transition font-medium mb-6 text-center">
                    <%= plan.cta_text || 'Try Now for Free' %>
                  </a>
                <% end %>

                <% if plan.trial_text.present? %>
                  <p class="text-xs text-gray-500 mb-4"><%= plan.trial_text %></p>
                <% end %>

                <% if plan.description.present? %>
                  <p class="text-xs text-gray-600 mb-4"><%= plan.description %></p>
                <% end %>

                <p class="text-xs text-gray-500 mb-4">
                  By signing up, you agree to our
                  <%= link_to "Terms of Service", terms_of_service_url_for(product), class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %>
                  and
                  <%= link_to "Privacy Policy", privacy_policy_url_for(product), class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %>
                </p>

                <ul class="space-y-3">
                  <% plan.features_list.each do |feature| %>
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-pink-600 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span class="text-sm text-gray-700"><%= feature %></span>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Standalone Pricing Plans (without product) -->
    <% if @pricing_plans.any? %>
      <%= render "pricing_cards" %>
    <% end %>
<!-- Brand Logos Section -->
<% if @trusted_brands.any? %>
<div class="bg-gray-50 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p class="text-center text-sm text-gray-600 mb-8">Trusted by 66,000+ brands</p>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center opacity-60">
      <% @trusted_brands.each do |brand| %>
        <div class="flex justify-center">
          <span class="<%= brand.css_classes %> text-gray-900"><%= brand.name %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>

<!-- Special Offer Section -->
<% if @special_offer %>
<div class="bg-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="bg-black rounded-2xl p-16 flex items-center justify-center">
        <div class="text-center">
          <% if @special_offer.logo_text.present? %>
            <svg class="w-48 h-48 mx-auto text-white" viewBox="0 0 200 200" fill="currentColor">
              <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" class="text-6xl font-bold">
                <%= @special_offer.logo_text %>
              </text>
            </svg>
          <% end %>
        </div>
      </div>
      <div>
        <% if @special_offer.subtitle.present? %>
          <p class="text-xs font-semibold text-pink-600 uppercase tracking-wide mb-4"><%= @special_offer.subtitle %></p>
        <% end %>
        <h2 class="text-4xl font-bold text-gray-900 mb-6"><%= @special_offer.title %></h2>
        <% if @special_offer.description.present? %>
          <p class="text-lg text-gray-600 mb-6"><%= @special_offer.description %></p>
        <% end %>
        <% if @special_offer.terms_text.present? %>
          <p class="text-sm text-gray-500 mb-6"><%= @special_offer.terms_text %></p>
        <% end %>
        <% if @special_offer.cta_url.present? %>
          <a href="<%= @special_offer.cta_url %>" target="_blank" class="inline-block px-6 py-3 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium">
            <%= @special_offer.cta_text || 'Get the offer' %>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

<!-- Bottom CTA Section -->
<div class="bg-gradient-to-br from-pink-600 to-purple-700 py-16 relative overflow-hidden">
  <div class="absolute right-0 top-0 bottom-0 w-1/2 flex items-center justify-center opacity-20">
    <span class="text-[400px] font-black text-white">4</span>
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-2xl">
      <h2 class="text-5xl font-bold text-white mb-6">Join 50,000 brands already on Revnous</h2>
      <p class="text-xl text-white mb-8">
        Start your free trial or get in touch with us to schedule a demo.
      </p>
      <div class="flex gap-4 mb-4">
        <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="px-6 py-3 bg-black text-white rounded-md hover:bg-gray-900 transition font-medium">
          Book a demo
        </a>
        <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-6 py-3 bg-white text-gray-900 rounded-md hover:bg-gray-100 transition font-medium">
          Try 30-Days Free
        </a>
      </div>
      <p class="text-sm text-white opacity-80">
        By continuing, you agree to our
        <%= link_to "Terms of Service", terms_of_service_path, class: "text-white underline hover:opacity-100", target: "_blank" %>
        and
        <%= link_to "Privacy Policy", privacy_policy_path, class: "text-white underline hover:opacity-100", target: "_blank" %>
      </p>
    </div>
  </div>
</div>

<script>
  // Slider functionality
  const slider = document.getElementById('orderSlider');
  const orderCount = document.getElementById('orderCount');

  slider.addEventListener('input', function() {
    orderCount.textContent = parseInt(this.value).toLocaleString();
  });
</script>
