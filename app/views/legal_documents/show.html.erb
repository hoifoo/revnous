<%= render "shared/notice_banner" %>

<!-- Legal Document Section -->
<div class="bg-white py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to root_path, class: "text-pink-600 hover:text-pink-700 font-medium text-sm" do %>
        ‚Üê Back to Home
      <% end %>
    </div>

    <!-- Document Type Badge -->
    <div class="flex items-center gap-3 mb-4 flex-wrap">
      <% if @product %>
        <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-semibold rounded-full uppercase tracking-wide">
          <%= @product.name %>
        </span>
      <% else %>
        <span class="px-3 py-1 bg-gray-100 text-gray-700 text-xs font-semibold rounded-full uppercase tracking-wide">
          Global
        </span>
      <% end %>
      <span class="px-3 py-1 bg-pink-100 text-pink-700 text-xs font-semibold rounded-full uppercase tracking-wide">
        <%= @legal_document.human_document_type %>
      </span>
      <% if @legal_document.effective_date.present? %>
        <span class="text-sm text-gray-500">
          Effective: <%= @legal_document.effective_date.strftime("%B %d, %Y") %>
        </span>
      <% end %>
      <% if @legal_document.version.present? %>
        <span class="text-sm text-gray-500">
          Version <%= @legal_document.version %>
        </span>
      <% end %>
    </div>

    <!-- Title -->
    <h1 class="text-5xl font-bold text-gray-900 mb-8"><%= @legal_document.title %></h1>

    <!-- Last Updated -->
    <div class="text-sm text-gray-600 mb-8 pb-8 border-b border-gray-200">
      Last updated: <%= @legal_document.updated_at.strftime("%B %d, %Y") %>
    </div>

    <!-- Content -->
    <div class="prose prose-lg max-w-none mb-16">
      <%= simple_format(@legal_document.content) %>
    </div>

    <!-- Footer Info -->
    <div class="border-t border-gray-200 pt-8">
      <div class="bg-gray-50 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Questions?</h3>
        <p class="text-gray-600 mb-4">
          If you have any questions about this document, please contact us.
        </p>
        <%= link_to "Contact Us", contact_us_path, class: "inline-block px-6 py-3 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" %>
      </div>
    </div>
  </div>
</div>

<!-- Other Legal Documents -->
<div class="bg-gray-50 py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Other Legal Documents</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= link_to privacy_policy_path, class: "block p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition" do %>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Privacy Policy</h3>
        <p class="text-gray-600 text-sm mb-3">Learn how we collect, use, and protect your data</p>
        <div class="flex items-center text-pink-600 font-medium text-sm">
          Read more
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      <% end %>

      <%= link_to terms_of_service_path, class: "block p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition" do %>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Terms of Service</h3>
        <p class="text-gray-600 text-sm mb-3">Understand the terms governing your use of our services</p>
        <div class="flex items-center text-pink-600 font-medium text-sm">
          Read more
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      <% end %>
    </div>
  </div>
</div>
