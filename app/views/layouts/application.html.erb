<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= page_description %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Canonical URL -->
    <link rel="canonical" href="<%= canonical_url %>">

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" type="image/png" href="/logo.png">
    <link rel="icon" type="image/svg+xml" href="/logo.svg">
    <link rel="apple-touch-icon" href="/logo.png">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="<%= page_og_type %>">
    <meta property="og:url" content="<%= canonical_url %>">
    <meta property="og:title" content="<%= page_title %>">
    <meta property="og:description" content="<%= page_description %>">
    <meta property="og:image" content="<%= page_og_image %>">
    <meta property="og:site_name" content="Revnous">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="<%= canonical_url %>">
    <meta name="twitter:title" content="<%= page_title %>">
    <meta name="twitter:description" content="<%= page_description %>">
    <meta name="twitter:image" content="<%= page_og_image %>">

    <!-- Robots -->
    <meta name="robots" content="<%= page_robots %>">

    <!-- Structured Data (JSON-LD) -->
    <% if content_for?(:structured_data) %>
      <%= yield :structured_data %>
    <% else %>
      <%= render_organization_schema %>
    <% end %>

    <% if Rails.env.production? %>
      <!-- Preload critical assets -->
      <link rel="preload" href="<%= asset_path('application.css') %>" as="style">
      <link rel="preload" href="<%= asset_path('application.js') %>" as="script">
    <% end %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module", defer: true %>
  </head>

  <body class="flex flex-col min-h-screen">
    <%= render "shared/navigation" %>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-green-50 border-l-4 border-green-500 p-4 mx-auto max-w-7xl mt-4">
        <p class="text-green-700"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 mx-auto max-w-7xl mt-4">
        <p class="text-red-700"><%= alert %></p>
      </div>
    <% end %>

    <main class="flex-1">
      <%= yield %>
    </main>
    <%= render "shared/footer" %>
    <%= render "shared/cookie_consent" %>

    <!-- Google Analytics loaded after main content -->
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}

      // Set default consent to denied
      gtag('consent', 'default', {
        'analytics_storage': 'denied',
        'ad_storage': 'denied',
        'wait_for_update': 500
      });

      gtag('js', new Date());
      gtag('config', 'G-6ZPXSBZYL8');
    </script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6ZPXSBZYL8"></script>
  </body>
</html>
