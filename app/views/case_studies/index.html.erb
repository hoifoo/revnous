<%= render "shared/notice_banner" %>

<div class="bg-white">
  <!-- Header Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
      <div>
        <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">CASE STUDIES</p>
        <h1 class="text-5xl lg:text-6xl font-bold text-gray-900 mb-6">Why Brands are Choosing Revnous</h1>
        <p class="text-lg text-gray-600">
          We've helped thousands of eCommerce brands raise their revenue by more than a total of $1B.
          Read some of these selected stories to learn how.
        </p>
      </div>
      <div class="rounded-2xl overflow-hidden shadow-xl">
        <img
          src="https://images.unsplash.com/photo-1531746790731-6c087fecd65a?w=800&h=600&fit=crop"
          alt="Featured case study"
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <!-- Filter Section -->
    <div class="mb-8">
      <p class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">Filter by</p>
      <div class="bg-gray-50 rounded-lg p-6">
        <%= form_with url: case_studies_path, method: :get, class: "flex flex-col md:flex-row gap-4 items-end" do |f| %>
        <div class="flex-1">
          <label class="block text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Industries</label>
          <%= f.select :industry,
              options_for_select([["All", ""]] + @industries.map { |i| [i, i] }, params[:industry]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          %>
        </div>

        <div class="flex-1">
          <label class="block text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Product Features</label>
          <%= f.select :product_features,
              options_for_select([["All", ""]] + @product_features_list.map { |p| [p, p] }, params[:product_features]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          %>
        </div>

        <div class="flex-1">
          <label class="block text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Ad Active</label>
          <%= f.select :ad_active,
              options_for_select([["All", ""], ["Active", "true"], ["Inactive", "false"]], params[:ad_active]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          %>
        </div>

        <div class="flex-1 relative">
          <label class="block text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Search</label>
          <%= f.text_field :search,
              placeholder: "Search...",
              value: params[:search],
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          %>
        </div>

        <div>
          <%= f.submit "Filter", class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition cursor-pointer" %>
        </div>
      <% end %>
      </div>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <% @case_studies.each do |case_study| %>
        <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition group">
          <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
            <% if case_study.image.attached? %>
              <%= image_tag case_study.image,
                  alt: case_study.name,
                  class: "w-full h-full object-cover group-hover:scale-105 transition duration-300"
              %>
            <% elsif case_study.image_url.present? %>
              <%= image_tag case_study.image_url,
                  alt: case_study.name,
                  class: "w-full h-full object-cover group-hover:scale-105 transition duration-300"
              %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-gray-200">
                <span class="text-gray-400">No image</span>
              </div>
            <% end %>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= case_study.name %></h3>
            <%= link_to case_study_path(case_study), class: "inline-flex items-center text-pink-600 font-medium hover:text-pink-700" do %>
              Read more
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- CTA Section -->
    <% if @case_studies.total_pages > 0 %>
      <div class="bg-black rounded-lg p-12 text-center mb-12">
        <h2 class="text-2xl font-semibold text-white mb-6">
          Start your free trial or get in touch with us to schedule a demo.
        </h2>
        <div class="flex justify-center gap-4">
          <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-6 py-3 bg-transparent border-2 border-white text-white rounded-md hover:bg-white hover:text-black transition">
            Start a Free Trial
          </a>
          <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="px-6 py-3 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition">
            Book a demo
          </a>
        </div>
      </div>
    <% end %>

    <!-- Pagination -->
    <div class="flex justify-center items-center gap-2">
      <%= paginate @case_studies %>
    </div>
  </div>
</div>
