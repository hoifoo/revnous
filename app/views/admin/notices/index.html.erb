<div class="flex justify-between items-center mb-8">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Notice Banners</h1>
    <p class="text-gray-600 mt-2">Manage promotional banners and announcements</p>
  </div>
  <%= link_to new_admin_notice_path, class: "px-6 py-3 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium inline-flex items-center" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    New Notice
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Link</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Color</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @notices.each do |notice| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <div class="font-medium text-gray-900"><%= notice.message.truncate(60) %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
            <% if notice.link_url.present? %>
              <a href="<%= notice.link_url %>" target="_blank" class="text-blue-600 hover:text-blue-800 truncate block max-w-xs">
                <%= notice.link_url.truncate(30) %>
              </a>
            <% else %>
              <span class="text-gray-400">No link</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="<%= notice.background_classes %> text-white px-3 py-1 rounded text-xs font-medium">
              <%= Notice::BACKGROUND_COLORS[notice.background_color][:label] %>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if notice.active? %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                Active
              </span>
            <% else %>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                Inactive
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
            <%= link_to edit_admin_notice_path(notice), class: "text-indigo-600 hover:text-indigo-900" do %>
              Edit
            <% end %>
            <%= button_to "Delete", admin_notice_path(notice), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6">
  <%= paginate @notices %>
</div>
