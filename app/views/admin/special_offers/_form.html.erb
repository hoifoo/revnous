<%= form_with(model: [:admin, special_offer], class: "space-y-6") do |form| %>
  <% if special_offer.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
      <h3 class="font-medium">Please fix the following errors:</h3>
      <ul class="list-disc list-inside mt-2">
        <% special_offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Left Column -->
    <div class="space-y-6">
      <div>
        <%= form.label :subtitle, "Subtitle/Tag", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :subtitle, placeholder: "e.g., EXCLUSIVE OFFER", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500", placeholder: "e.g., Recently upgraded to Shopify Plus?" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :logo_text, "Logo Text (in black box)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :logo_text, placeholder: "e.g., Shopify+", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>
    </div>

    <!-- Right Column -->
    <div class="space-y-6">
      <div>
        <%= form.label :terms_text, "Terms Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :terms_text, placeholder: "*Terms apply", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :cta_text, "Button Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :cta_text, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :cta_url, "Button URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :cta_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :placement_tags, "Show on Pages", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="space-y-2">
          <% SpecialOffer::PLACEMENT_OPTIONS.each do |placement| %>
            <label class="flex items-center">
              <%= check_box_tag "special_offer[placement_tags][]", placement, special_offer.placement_tags_list.include?(placement), class: "rounded border-gray-300 text-pink-600 focus:ring-pink-500 mr-2" %>
              <span class="text-sm text-gray-700 capitalize"><%= placement.gsub('_', ' ') %></span>
            </label>
          <% end %>
        </div>
      </div>

      <div>
        <label class="flex items-center">
          <%= form.check_box :active, class: "rounded border-gray-300 text-pink-600 focus:ring-pink-500 mr-2" %>
          <span class="text-sm font-medium text-gray-700">Active</span>
        </label>
      </div>
    </div>
  </div>

  <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_special_offers_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition font-medium" %>
    <%= form.submit class: "px-4 py-2 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" %>
  </div>
<% end %>
