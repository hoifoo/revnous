<%= form_with(model: [:admin, seo_metadatum], class: "space-y-6") do |form| %>
  <% if seo_metadatum.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(seo_metadatum.errors.count, "error") %> prohibited this seo_metadatum from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% seo_metadatum.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :page_identifier, "Page Identifier (e.g., home#index)", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :page_identifier, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
    <p class="mt-2 text-sm text-gray-500">Unique identifier for the page (controller#action).</p>
  </div>

  <div>
    <%= form.label :page_title, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :page_title, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <div>
    <%= form.label :meta_description, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_area :meta_description, rows: 3, class: "shadow-sm focus:ring-pink-500 focus:border-pink-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <div class="flex justify-end">
    <%= link_to "Cancel", admin_seo_metadata_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 mr-3" %>
    <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 cursor-pointer" %>
  </div>
<% end %>
