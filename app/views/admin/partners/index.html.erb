<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Partners</h1>
    <%= link_to new_admin_partner_path, class: "px-4 py-2 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" do %>
      Add New Partner
    <% end %>
  </div>

  <% if @partners.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Logo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Position</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @partners.each do |partner| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <% if partner.logo.attached? %>
                  <%= image_tag partner.logo, class: "h-12 w-auto object-contain", alt: partner.name %>
                <% else %>
                  <div class="h-12 w-12 bg-gray-200 rounded flex items-center justify-center">
                    <span class="text-xs text-gray-500">No logo</span>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= partner.name %></div>
              </td>
              <td class="px-6 py-4">
                <% if partner.website_url.present? %>
                  <a href="<%= partner.website_url %>" target="_blank" class="text-sm text-pink-600 hover:text-pink-900 truncate block max-w-xs">
                    <%= partner.website_url.gsub(/^https?:\/\//, '') %>
                  </a>
                <% else %>
                  <span class="text-sm text-gray-400">N/A</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= partner.position %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= partner.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= partner.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Edit", edit_admin_partner_path(partner), class: "text-pink-600 hover:text-pink-900 mr-4" %>
                <%= button_to "Delete", admin_partner_path(partner), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @partners, theme: 'twitter-bootstrap-4' if @partners.total_pages > 1 %>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <p class="text-gray-500 mb-4">No partners yet</p>
      <%= link_to "Add your first partner", new_admin_partner_path, class: "px-4 py-2 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" %>
    </div>
  <% end %>
</div>
