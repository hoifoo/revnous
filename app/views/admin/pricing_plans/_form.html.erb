<%= form_with(model: [:admin, pricing_plan], class: "space-y-6") do |form| %>
  <% if pricing_plan.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
      <h3 class="font-medium">Please fix the following errors:</h3>
      <ul class="list-disc list-inside mt-2">
        <% pricing_plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :product_id, "Product", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :product_id, Product.ordered, :id, :name,
        { prompt: "Select a product (optional)" },
        { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" } %>
    <p class="text-xs text-gray-500 mt-1">Associate this pricing plan with a product</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Left Column -->
    <div class="space-y-6">
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= form.label :price, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :price, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
          <p class="text-xs text-gray-500 mt-1">Leave blank for free plan</p>
        </div>

        <div>
          <%= form.label :billing_period, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :billing_period, placeholder: "mo", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
        </div>
      </div>

      <div>
        <%= form.label :order_limit, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :order_limit, placeholder: "e.g., '200 total store orders per month'", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
        <p class="text-xs text-gray-500 mt-1">Leave blank for unlimited</p>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>
    </div>

    <!-- Right Column -->
    <div class="space-y-6">
      <div>
        <%= form.label :cta_text, "CTA Button Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :cta_text, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :cta_url, "CTA Button URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :cta_url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :trial_text, "Trial/Fine Print Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :trial_text, rows: 2, placeholder: "e.g., '30-day free trial Â· Only available on Shopify Plus'", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
      </div>

      <div>
        <%= form.label :position, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :position, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
        <p class="text-xs text-gray-500 mt-1">Lower numbers appear first</p>
      </div>
    </div>
  </div>

  <!-- Checkboxes -->
  <div class="flex items-center gap-6">
    <label class="flex items-center">
      <%= form.check_box :is_popular, class: "rounded border-gray-300 text-pink-600 focus:ring-pink-500 mr-2" %>
      <span class="text-sm font-medium text-gray-700">Mark as Popular</span>
    </label>

    <label class="flex items-center">
      <%= form.check_box :shopify_plus_only, class: "rounded border-gray-300 text-pink-600 focus:ring-pink-500 mr-2" %>
      <span class="text-sm font-medium text-gray-700">Shopify Plus Only</span>
    </label>
  </div>

  <!-- Features -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">Features</label>
    <div id="features-container" class="space-y-2">
      <% features = pricing_plan.features_list %>
      <% features = [''] if features.empty? %>
      <% features.each_with_index do |feature, index| %>
        <div class="flex gap-2">
          <%= text_field_tag "pricing_plan[features][]", feature, placeholder: "Enter feature", class: "flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500" %>
          <button type="button" onclick="this.parentElement.remove()" class="px-3 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">Remove</button>
        </div>
      <% end %>
    </div>
    <button type="button" onclick="addFeatureField()" class="mt-2 px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300">
      + Add Feature
    </button>
  </div>

  <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
    <%= link_to "Cancel", admin_pricing_plans_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition font-medium" %>
    <%= form.submit class: "px-4 py-2 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" %>
  </div>
<% end %>

<script>
  function addFeatureField() {
    const container = document.getElementById('features-container');
    const div = document.createElement('div');
    div.className = 'flex gap-2';
    div.innerHTML = `
      <input type="text" name="pricing_plan[features][]" placeholder="Enter feature" class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-pink-500">
      <button type="button" onclick="this.parentElement.remove()" class="px-3 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">Remove</button>
    `;
    container.appendChild(div);
  }
</script>
