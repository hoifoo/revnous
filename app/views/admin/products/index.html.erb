<div class="max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Products</h1>
    <%= link_to new_admin_product_path, class: "px-4 py-2 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" do %>
      Add New Product
    <% end %>
  </div>

  <% if @products.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Logo</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plans</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @products.each do |product| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <% if product.logo.attached? %>
                  <%= image_tag product.logo, class: "h-12 w-12 object-contain", alt: product.name %>
                <% else %>
                  <div class="h-12 w-12 bg-gray-200 rounded flex items-center justify-center">
                    <span class="text-xs text-gray-500">No logo</span>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
                <% if product.url.present? %>
                  <a href="<%= product.url %>" target="_blank" class="text-xs text-pink-600 hover:text-pink-900">
                    <%= product.url.gsub(/^https?:\/\//, '').truncate(30) %>
                  </a>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if product.product_type.present? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= product.product_type %>
                  </span>
                <% else %>
                  <span class="text-sm text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= product.pricing_plans.count %> plan<%= product.pricing_plans.count != 1 ? 's' : '' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-2">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= product.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= product.active? ? 'Active' : 'Inactive' %>
                  </span>
                  <% if product.featured %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                      Featured
                    </span>
                  <% end %>
                  <% if product.featured_on_home %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                      Home
                    </span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "Edit", edit_admin_product_path(product), class: "text-pink-600 hover:text-pink-900 mr-4" %>
                <%= button_to "Delete", admin_product_path(product), method: :delete, data: { turbo_confirm: "Are you sure? This will also delete all associated pricing plans!" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @products, theme: 'twitter-bootstrap-4' if @products.total_pages > 1 %>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <p class="text-gray-500 mb-4">No products yet</p>
      <%= link_to "Add your first product", new_admin_product_path, class: "px-4 py-2 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium" %>
    </div>
  <% end %>
</div>
