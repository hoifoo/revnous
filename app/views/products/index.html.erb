<%= render "shared/notice_banner" %>

<!-- Hero Section -->
<div class="bg-gradient-to-br from-gray-900 via-purple-900 to-pink-900 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-5xl lg:text-6xl font-bold mb-6">Our Products</h1>
    <p class="text-xl text-gray-300 max-w-2xl mx-auto">
      Discover our suite of powerful tools designed to help you maximize revenue and grow your business
    </p>
  </div>
</div>

<!-- Products Section -->
<div class="bg-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @products.any? %>
      <div class="space-y-20">
        <% @products.each_with_index do |product, index| %>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center <%= 'lg:flex-row-reverse' if index.odd? %>">
            <!-- Product Info Column -->
            <div class="<%= 'lg:order-2' if index.odd? %>">
              <% if product.logo.attached? %>
                <div class="mb-6">
                  <%= image_tag product.logo, class: "h-20 w-auto object-contain" %>
                </div>
              <% end %>

              <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
                <%= product.name %>
              </h2>

              <% if product.product_type.present? %>
                <span class="inline-block px-4 py-1.5 bg-pink-100 text-pink-700 text-sm font-semibold rounded-full uppercase tracking-wide mb-4">
                  <%= product.product_type %>
                </span>
              <% end %>

              <% if product.description.present? %>
                <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                  <%= product.description %>
                </p>
              <% elsif product.short_description.present? %>
                <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                  <%= product.short_description %>
                </p>
              <% end %>

              <div class="flex gap-4 mb-4">
                <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="inline-flex items-center px-8 py-4 bg-pink-600 text-white rounded-md hover:bg-pink-700 transition font-medium text-lg">
                  <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Schedule a Demo
                </a>

                <%= link_to product, class: "inline-flex items-center px-8 py-4 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition font-medium text-lg" do %>
                  Learn More
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                <% end %>
              </div>

              <p class="text-xs text-gray-500">
                See our
                <%= link_to "Terms of Service", terms_of_service_url_for(product), class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %>
                and
                <%= link_to "Privacy Policy", privacy_policy_url_for(product), class: "text-pink-600 hover:text-pink-700 underline", target: "_blank" %>
              </p>
            </div>

            <!-- Product Cover Photo Column -->
            <div class="<%= 'lg:order-1' if index.odd? %>">
              <% if product.cover_photo.attached? %>
                <div class="rounded-lg overflow-hidden shadow-2xl">
                  <%= image_tag product.cover_photo, alt: product.name, class: "w-full h-full object-cover" %>
                </div>
              <% else %>
                <div class="rounded-lg overflow-hidden shadow-2xl bg-gradient-to-br from-pink-100 to-purple-100 aspect-video flex items-center justify-center">
                  <span class="text-gray-400 text-2xl">No image available</span>
                </div>
              <% end %>
            </div>
          </div>

          <% unless index == @products.length - 1 %>
            <div class="border-t border-gray-200"></div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-xl text-gray-600">No products available at this time.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- CTA Section -->
<div class="bg-gradient-to-br from-pink-600 to-purple-700 py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-white mb-4">Ready to Get Started?</h2>
    <p class="text-xl text-white mb-8">
      Join 66,000+ brands already using Revnous to drive sustainable growth
    </p>
    <div class="flex justify-center gap-4 mb-4">
      <a href="https://apps.shopify.com/pricing-schedule" target="_blank" class="px-8 py-4 bg-black text-white rounded-md hover:bg-gray-900 transition font-medium text-lg">
        Start Free Trial
      </a>
      <a href="https://calendar.app.google/ExeXXoFRYB52hu5S8" target="_blank" class="px-8 py-4 bg-white text-gray-900 rounded-md hover:bg-gray-100 transition font-medium text-lg">
        Book a Demo
      </a>
    </div>
    <p class="text-sm text-white opacity-80">
      By continuing, you agree to our
      <%= link_to "Terms of Service", terms_of_service_path, class: "text-white underline hover:opacity-100", target: "_blank" %>
      and
      <%= link_to "Privacy Policy", privacy_policy_path, class: "text-white underline hover:opacity-100", target: "_blank" %>
    </p>
  </div>
</div>
